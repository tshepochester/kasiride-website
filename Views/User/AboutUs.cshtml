@model KASY_RIDES.Models.Rides

@{
    ViewData["Title"] = "AboutUs";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
    }

    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        /* background: white; */
        background-image: url('https://t3.ftcdn.net/jpg/04/99/56/30/240_F_499563059_GGQxzylCFmlUlL1jr5rVrbYE9yk9vkmp.jpg');
        background-size: cover;
        border: 1px solid#ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    header {
        background-color: #000;
        color: #fff;
        padding: 20px;
        text-align: center;
    }


    h1, h2 {
        text-align: center;
    }

    .intro, .mission, .values, .history {
        background: white;
        padding: 20px;
        margin: 15px 0;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }


    footer {
        background-color: #333;
        color: #fff;
        padding: 1em;
        text-align: center;
        clear: both;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/about.css">
    <title>About Us - Kasy Ride</title>
</head>
<body>
    <header>
        <h1>About Us</h1>
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS02qPnvJZZtWoCfpC1S7quJUEsSJxehJQmOQ&s" alt="logo" width="100" height="100" />
    </header>
    <div class="container">

    <main>
        <section class="intro">
            <h2>Who We Are</h2>
            <p>Kasy Ride is dedicated to providing safe, reliable, and convenient transportation. Our experienced drivers and user-friendly app ensure a smooth ride every time.</p>
        </section>

        <section class="mission">
            <h2>Our Mission</h2>
            <p>To transform urban mobility by offering a fast, affordable, and safe travel experience for everyone.</p>
        </section>

        <section class="values">
            <h2>Our Values</h2>
            <ul>
                <li>Safety First</li>
                <li>Customer Focused</li>
                <li>Integrity and Transparency</li>
                <li>Innovation and Improvement</li>
            </ul>
        </section>

        <section class="history">
            <h2>Our History</h2>
            <p>Founded in 2024, Kasy Ride Service has quickly become a trusted name in transportation. Our commitment to excellence drives our growth and customer satisfaction.</p>
        </section>
    </main>
    </div>
</body>
</html>
