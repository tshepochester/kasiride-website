@using BackendlessAPI;
@model KASY_RIDES.Models.Users

@{
    ViewData["Title"] = "Profile";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f0f0f0;
    }

    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        /* background: white; */
        background-image: url('https://t3.ftcdn.net/jpg/04/99/56/30/240_F_499563059_GGQxzylCFmlUlL1jr5rVrbYE9yk9vkmp.jpg');
        background-size: cover;
        border: 1px solid#ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    header {
        background-color: #000;
        color: #fff;
        padding: 20px;
        text-align: center;
    }


    .container {
        padding: 50px 20px;
    }

    h1 {
        margin-bottom: 20px;
    }


    h4 {
        text-align: center;
        margin-bottom: 20px;
    }

    dd::before {
        content: "\2022";
        font-weight: bold;
        font-size: 1.5em;
        color: #4CAF50;
        margin-right: 10px;
    }

    footer {
        background-color: #333;
        color: #fff;
        padding: 1em;
        text-align: center;
        clear: both;
    }

</style>

<header>
    <h1>Profile</h1>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS02qPnvJZZtWoCfpC1S7quJUEsSJxehJQmOQ&s" alt="logo" width="100" height="100" />
</header>
<div class="container">
    <h4>Users</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.objectId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.objectId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>

        <!-- Conditional Fields Based on Role -->
        @if (Backendless.UserService.CurrentUser.GetProperty("Role").ToString() == "Admin")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StaffNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StaffNumber)
            </dd>
        }
        else if (Backendless.UserService.CurrentUser.GetProperty("Role").ToString() == "Driver")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VehicleId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VehicleId)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VehicleModel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VehicleModel)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VehicleDisc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VehicleDisc)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LicenseNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LicenseNumber)
            </dd>
        }
    </dl>
</div>

<div>
    <a asp-action="EditProfile" asp-controller="User">Edit Profile</a>
</div>
