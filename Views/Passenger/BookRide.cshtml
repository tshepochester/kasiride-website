@model KASY_RIDES.Models.Rides

@{
    ViewData["Title"] = "BookRide";
}

<style>
    #map {
        height: 100px; /* Set the height of the map */
        margin-bottom: 20px; /* Space below the map */
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
    }

    header {
        background-color: #000;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        /* background: white; */
        background-image: url('https://t3.ftcdn.net/jpg/04/99/56/30/240_F_499563059_GGQxzylCFmlUlL1jr5rVrbYE9yk9vkmp.jpg');
        background-size: cover;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    vehicle-type {
        width: 100%;
        height: 40px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    h4 {
        text-align: center;
        margin-bottom: 20px;
    }

    h5 {
        text-align: center;
        margin-bottom: 20px;
    }

    .tab-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .tab-button {
        background-color: #eee;
        color: #333;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }

    tab-button.active {
        background-color: #4CAF50;
        color: #fff;
    }

    .tab-content {
        padding: 20px;
    }

    .tab-panel {
        display: none;
    }

        .tab-panel.active {
            display: block;
        }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 10px;
    }

    input[type="date"] {
        display: block;
    }

    footer {
        background-color: #333;
        color: #fff;
        padding: 1em;
        text-align: center;
        clear: both;
    }

</style>
<body>
    <header>
        <h1>BookRide</h1>
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS02qPnvJZZtWoCfpC1S7quJUEsSJxehJQmOQ&s" alt="logo" width="100" height="100" />
    </header>
    <div class="container">
        <h4>Rides</h4>
        <hr />
<div class="row">
    <h5>Info About a Ride</h5>
    <div class="col-md-4">
        <form asp-action="BookRide">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartLocation" class="control-label"></label>
                <input asp-for="StartLocation" class="form-control" />
                <span asp-validation-for="StartLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndLocation" class="control-label"></label>
                <input asp-for="EndLocation" class="form-control" />
                <span asp-validation-for="EndLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" asp-action="AutoPay" asp-controller="TaxiBank" value="AutoPay" class="btn btn-primary" />
            </div>

            <br />
            <h5>Info About a Payment</h5>
            
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cvc" class="control-label"></label>
                <input asp-for="Cvc" class="form-control" />
                <span asp-validation-for="Cvc" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>
</body>
