@using BackendlessAPI;
@model Kasy_Rides.Models.BankAccount

@{
    ViewData["Title"] = "CashOut";
}


<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
       
    }


    h4 {
        text-align: center;
    }


    .container {
        max-width: auto;
        margin: 40px auto;
        padding: 20px;
        /* background: white; */
        background-image: url('https://t3.ftcdn.net/jpg/04/99/56/30/240_F_499563059_GGQxzylCFmlUlL1jr5rVrbYE9yk9vkmp.jpg');
        background-size: cover;
        border: 1px solid#ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    header {
        background-color: #000;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    footer {
        background-color: #333;
        color: #fff;
        padding: 1em;
        text-align: center;
        clear: both;
    }
</style>

<header>
    <h1>CashOut</h1>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS02qPnvJZZtWoCfpC1S7quJUEsSJxehJQmOQ&s" alt="logo" width="100" height="100" />
</header>
<body>
    <div class="container">

<h4>Enter an amount to cashout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CashOut">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>You cannot cash out an amount greater than what you have!!!</h3>

            @{
                BankAccount bankAccount = new BankAccount();
                var accounts = Backendless.Data.Of<BankAccount>().Find();

                foreach (var item in accounts)
                {
                    if (item.IDNumber == Backendless.UserService.CurrentUser.ObjectId)
                    {
                        bankAccount = item;
                    }
                }
                <p> Account Balance : R @bankAccount.Balance</p>
            }    
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cashout" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div><br />
    <a asp-action="Index">Account Info</a>
</div>
</div>
</body>

