@model KASY_RIDES.Models.Rides

@{
    ViewData["Title"] = "RideInfo";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
        text-align: center;
    }

    header {
        background-color: #000;
        color: #fff;
        padding: 20px;
    }

    .container {
        max-width: auto;
        margin: 40px auto;
        padding: 50px 20px;
        /* background: white; */
        background-image: url('https://t3.ftcdn.net/jpg/04/99/56/30/240_F_499563059_GGQxzylCFmlUlL1jr5rVrbYE9yk9vkmp.jpg');
        background-size: cover;
        border: 1px solid#ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    footer {
        background-color: #333;
        color: #fff;
        padding: 1em;
        text-align: center;
        clear: both;
    }

</style>

<header>
    <h1>RideInfo</h1>
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS02qPnvJZZtWoCfpC1S7quJUEsSJxehJQmOQ&s" alt="logo" width="100" height="100" />
</header>

<div>
    <h4>Rides</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RideId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RideId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.objectId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.objectId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DriverId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DriverId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PassengerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PassengerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartLocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndLocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Rides">Available Rides</a> |
